        }

        .details_box p {
            font-size: 10px;
        }

        .details_box label {
            font-size: 15px;
        }

        .signup_details img {
            margin: auto;
        }

        .log>img {
            align-items: center;

        }

        .log {
            text-align: center;
            margin-bottom: 18px;
            margin-top: 15px;
        }

        #signup {
            background-color: white;
            width: 100%;
            font: 14.8px"open sans"sans-serif;
            padding-top: 5px;
            padding-bottom: 5px;
            font: 20px;

            width: 276px;
            height: 40px;
            text-align: center;
            border-radius: 4px;
            border-color: lightgray;
            border: none;
            background-color: #FF5722;
            color: #FFFFFF;
            color: #FFFFFF;
            ;
        }

        #forget {
            background-color: whitesmoke;
            width: 100%;
            text-align: center;
            margin-top: 0px;

        }

        .footer>div {
            text-align: center;
            margin-bottom: 10px;

        }

        .box1 img {
            height: 38px;
        }

        .footer_para {
            width: 25%;
            text-align: center;
            color: #9B9B9B;
            font-size: 12px;

        }

        div>.footer_para {
            margin-top: 0px;
        }


        .logo p {
            font-size: 20px;
            color: gray
        }

        .top_heading {
            text-align: center;
            margin-top: 20px;
            margin-bottom: 0px;
            color: gray;
            font-size: 10px;
            margin-bottom: 10px;
        }

        .size {
            width: 276px;
            height: 44px;
            border-radius: 4px;
            padding-left: 12px;
            border: 0.1px solid lightgray;
            margin-bottom: 20px;
            font-size: 15px;
        }

        input:focus {
            outline: none;

        }

        #container {
            margin: auto;

        }

        #signuptext {
            color: black;
        }

        #signup:hover {
            background-color: #f38a6a;
        }

        .alert {
            font-size: 12px !important;
            color: red;
            margin-left: 2px !important;
            margin-bottom: 8px;
            visibility: hidden;
        }
    </style>
</head>

<body>
    <div class="app-container">
        <div id="container">
            <!-- logo div containing logo and text of signup  -->
            <div class="top_heading">

            </div>

            <div class="logo"> <a href="/"><img
                        src="https://developers.kite.trade/static/images/app-icons/12hpqpbfwnxyvud8.png" /></a>
                <p id="signuptext"> Sign Up here</p>
            </div>
            <!-- login detals div will take inforation of signup -->

            <div class="signup_details">
