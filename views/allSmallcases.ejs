<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- favicon -->
    <link rel="shortcut icon" href="https://developers.kite.trade/static/images/app-icons/12hpqpbfwnxyvud8.png"
        type="image/x-icon" />

    <!-- Stylesheet -->
    <link rel="stylesheet" href="/common.css" />
    <link rel="stylesheet" href="/allSmallcases.css" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200;300;400;500;600;700&display=swap"
        rel="stylesheet" />
    <title>All Smallcases</title>
</head>

<body>
    <div class="root">
        <!-- header -->
        <%- include("../components/header", isUserLoggedIn) %>
            <!-- header ends -->
            
            <!-- App container -->
            <div class="app-container">
                <!-- main div -->
                <div class="main">
                    <div class="main-top">
                        <h1>Discover</h1>
                        <div class="top-links">
                            <a href="/discover/explore">Collection</a>
                            <a class="collection-btn" href="/discover/all">All Smallcases</a>
                        </div>
                    </div>

                    <div class="smallcase-page">
                        <div class="filters">
                            <div class="filter-heading">
                                <p id="filter-content">Filters</p>
                                <a href="/discover/all">
                                    <p id="clearFilters">Clear All</p>
                                </a>
                            </div>
                            <div class="investment-amount-filter">
                                <p>Investment Amount</p>
                                <label class="container">Any
                                    <input value="100000000000" type="radio" checked="checked" name="investment-amount">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="container">Under ₹ 5,000
                                    <input value="5000" type="radio" name="investment-amount">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="container">
                                    Under ₹ 25,000
                                    <input value="25000" type="radio" name="investment-amount">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="container">
                                    Under ₹ 50,000
                                    <input value="50000" type="radio" name="investment-amount">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
    
                            <div class="volatility-filter">
                                <p>Volatility</p>
                                <div class="volatility-btns">
                                    <div class="cat">
                                        <label>
                                            <input name="volatility" type="checkbox" value="Low"><span class="volatility-btn">Low</span>
                                        </label>
                                    </div>
    
                                    <div class="cat">
                                        <label>
                                            <input name="volatility" type="checkbox" value="Med."><span class="volatility-btn">Medium</span>
                                        </label>
                                    </div>
    
                                    <div class="cat">
                                        <label>
                                            <input name="volatility" type="checkbox" value="High"><span class="volatility-btn">High</span>
                                        </label>
                                    </div>
    
                                </div>
                            </div>
    
                            <div class="sorting-filters">
                                <p>Sort by</p>
                                <label class="container">Popularity
                                    <input value="popularity" type="radio" checked="checked" name="sorting-filters">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="container">
                                    Minimum Amount
                                    <input value="minAmount" type="radio" name="sorting-filters">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="container">
                                    Returns
                                    <input value="returns" type="radio" name="sorting-filters">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>

                        <!-- all smallcases -->
                        <div class="smallcases">
                            <!-- <% data.forEach(el=> { %>
                                <a href="/smallcase/<%= el.id %> ">
                                    <div class="product">
                                        <div class="product-main-info"><img
                                                src="<%= el.img %> ">
                                            <p><%= el.title %></p>
                                        </div>
                                        <p class="product-short-info"><%= el.shortDescription %></p>
                                        <div class="stats">
                                            <div class="stat-1">
                                                <p>Min Amount</p>
                                                <p> &#x20B9 <%= el.minAmount %></p>
                                            </div>
                                            <div class="stat-2">
                                                <p><%= el.cagYear %>Y CAGR</p>
                                                <p style="color: rgb(25, 175, 85);"><%= el.cagRate %>%</p>
                                            </div>
                                            <div class="stat-3">
                                                <p><%= el.volatility %> Volatility</p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                <% }) %> -->
                        </div>
                    </div>
                </div>
                <!-- main div ends -->
                <!-- footer -->
                <%- include("../components/footer") %>
                    <!-- footer ends -->
            </div>
    </div>

    <script id="__EJS_DATA__" type="application/json">
        <%- JSON.stringify(data) %>
    </script>

    <script src="/allSmallcasesFilters.js"></script>
    <script src="/common.js"></script>
</body>

</html>